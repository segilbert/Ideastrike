﻿@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Shared/Layout.cshtml";
}
<h3>@Model.UserName Profile</h3>

@Model.Email<br/>
@Model.Github<br/>

@if (Model.Ideas.Count > 0)
{
    <h4>Innovation and Ideas</h4>
    <ol>
    @foreach (var i in Model.Ideas)
    {
        <li><a href="/idea/@i.Id">@i.Title</a></li>
    }
    </ol>
}
@if (Model.Features.Count > 0)
{
    <h4>Features</h4>
    <ol>
    @foreach (var i in Model.Features)
    {
        <li><a href="/idea/@i.Id">@i.Idea.Title</a>
            </br>
            @i.Text
        </li>
    }
    </ol>
}
@if (Model.Votes.Count > 0)
{
    <h4>Votes</h4>
    <ol>
    @foreach (var i in Model.Votes)
    {
        <li><a href="/idea/@i.Idea.Id">@i.Idea.Title</a></li>
    }
    </ol>
}